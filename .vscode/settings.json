{
  // Flutter Hot Reload Settings
  "dart.flutterHotReloadOnSave": "all",
  "dart.flutterHotReloadOnSaveWatcher": "all",
  "dart.flutterRunLogFile": "flutter.log",

  // Auto Save Settings
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  // Flutter/Dart Specific Settings
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  "dart.hotReloadOnSave": "all",

  // Editor Settings for Better Development
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },

  // Flutter Extension Settings
  "dart.showInspectorNotificationsForWidgetErrors": true,
  "dart.debugExternalPackageLibraries": false,
  "dart.debugSdkLibraries": false,

  // File Watcher Settings
  "files.watcherExclude": {
    "**/build/**": true,
    "**/.dart_tool/**": true,
    "**/.pub/**": true,
    "**/ios/Pods/**": true,
    "**/android/.gradle/**": true
  }
}
